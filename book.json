{
  "root": "./docs",
  "styles": {
    "website": "styles/website.css"
  },
  "plugins": ["page-toc", "disqus", "github", "anchorjs"],
  "pluginsConfig": {
    "selector": ".markdown-section h1, .markdown-section h2, .markdown-section h3, .markdown-section h4",
    "position": "top",
    "showByDefault": true,
    "disqus": {
      "shortName": "apuntes-javascript"
    },
    "github": {
      "url": "https://github.com/trainings-juanmaguitar/apuntes-javascript-intermedio"
    },
    "anchorjs": {
      "selector": "h2,h3,h4,h5",
      "icon": "#",
      "placement": "left",
      "visible": "always",
      "class": "custom-class another-one",
      "truncate": 64,
      "ariaLabel": "Anchor"
    }
  }
}
